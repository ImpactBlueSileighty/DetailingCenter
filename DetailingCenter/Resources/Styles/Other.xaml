<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sampleData="clr-namespace:DetailingCenter.SampleData" >
                    

    <sampleData:SampleData x:Key="SampleData"/>
    <!-- StartWindow Style -->

    <Style x:Key="textBlockStyle1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Margin" Value="0 0 0 5"/>
    </Style>

    <Style x:Key="textBoxStyle1" TargetType="TextBox">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
    </Style>

    <Style x:Key="passBoxStyle1" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="17"/>

    </Style>


    <!-- Add/Edit Window -->

    <Style x:Key="AddEditTbxStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="/DetailingCenter;component/Resources/Fonts/#Open Sans Light"/>
        <Setter Property="Foreground" Value="#FF171E28"/>
    </Style>

</ResourceDictionary>