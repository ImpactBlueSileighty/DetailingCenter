<Window x:Class="DetailingCenter.Windows.AdminAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailingCenter.Windows"
        mc:Ignorable="d"
        Title="Вход в админ панель" 
        Height="400" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <WrapPanel 
                   HorizontalAlignment="Center" 
                   Margin="0 30 0 0"
                   Orientation="Vertical">
            <Image Source="/Images/klipartz.com.png" Width="100" Height="100"/>
            <TextBlock Text="Логин" 
                       Style="{StaticResource textBlockStyle1}" />
            <TextBox x:Name="txtLogin" 
                     Width="200" 
                     Height="25"
                     Style="{StaticResource textBoxStyle1}"/>

            <TextBlock Text="Пароль"
                     Style="{DynamicResource textBlockStyle1}"/>

            <PasswordBox x:Name="txtPassword" 
                     Width="200" 
                     Height="25"
                     Style="{StaticResource passBoxStyle1}"/>
        </WrapPanel>
    </Grid>
</Window>
